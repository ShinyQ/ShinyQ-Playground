---
import "@/styles/global.css";
import Navbar from "./Navbar.astro";
import Footer from "./Footer.astro";
import ScatteredIcons from "@/layouts/ScatteredIcons.astro";
import { cn } from "@/lib/utils";
import { trackUniqueVisitor } from "@/lib/uniqueVisitor";
import { colorPalettes } from "@/data/colorPalettes";

interface Props {
  title?: string;
  description?: string;
  className?: string;
}

const {
  title = "Kurniadi Ahmad Wijaya",
  description = "Backend and Full-stack Developer with expertise in microservices, API integrations, and system optimization",
  className,
} = Astro.props;

const ip = Astro.request.headers.get('x-forwarded-for') || Astro.request.headers.get('x-real-ip') || 'unknown';
const userAgent = Astro.request.headers.get('user-agent') || 'unknown';

await trackUniqueVisitor(ip, userAgent);

const defaultSite = "Kurniadi Ahmad Wijaya";
const fullTitle = `${title} - ${defaultSite}`;
const defaultImage = "https://i.ibb.co.com/xSnhjyJG/banner.png";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    {/* Prevent theme flash - must be first */}
    <script define:vars={{ colorPalettes }} is:inline>
      const palettes = colorPalettes;
      (function() {
        // Get theme mode
        const theme = (() => {
          if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
            return localStorage.getItem('theme');
          }
          if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
            return 'dark';
          }
          return 'light';
        })();
        
        // Get color palette
        const colorTheme = localStorage.getItem('colorTheme') || 'default';
        
        // Apply theme mode
        document.documentElement.classList.add(theme);
        document.documentElement.style.colorScheme = theme;

        // Apply color palette
        const palette = palettes[colorTheme] || palettes.default;
        const colors = theme === 'dark' ? palette.dark : palette.light;

        Object.entries(colors).forEach(([key, value]) => {
          document.documentElement.style.setProperty(`--${key}`, value);
        });

        // Add a class to prevent theme selector flash
        document.documentElement.classList.add('theme-loaded');
      })();
    </script>

    <style is:global>
      :root {
        color-scheme: light dark;
      }
      :root.dark {
        color-scheme: dark;
      }
      :root:not(.dark) {
        color-scheme: light;
      }
      /* Hide theme selector until theme is loaded */
      .theme-selector {
        opacity: 0;
        transition: opacity 0.2s ease-in-out;
      }
      .theme-loaded .theme-selector {
        opacity: 1;
      }
    </style>

    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Kurniadi Ahmad Wijaya" />
    <meta
      name="google-site-verification"
      content="Cf6K4499XE1AIgP1o-Ij-A1LXl-ItJ2uc803JRlHp_g"
    />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={defaultImage} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@kurniadiwijaya" />
    <meta name="twitter:image" content={defaultImage} />

    {/* Google Analytics */}
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-T0WDF3MR3D" is:inline></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-T0WDF3MR3D');
    </script>

    {/* Preload main Google Fonts for LCP optimization */}
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"
      as="style"
      crossorigin="anonymous"
    />

    {/* Fonts */}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
      crossorigin="anonymous"
    />

    <title>{fullTitle}</title>
    <script>
      // Prevent flash of wrong theme
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          const storedTheme = localStorage.getItem('theme');
          return storedTheme === 'dark' ? 'dark' : 'light';
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
      document.documentElement.classList.add(theme);
    </script>
    <script src="/src/scripts/theme.ts"></script>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <ScatteredIcons />
      <Navbar />
      <main class={cn("flex-grow pt-16", className)}>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

