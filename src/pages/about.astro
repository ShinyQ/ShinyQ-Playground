---
import Layout from '@/layouts/Layout.astro';
import { aboutInfo } from '@/data/about';
import CVDialog from '@/components/custom/CVDialog';
import { Github, Linkedin, Mail } from 'lucide-react';
import { metadata } from '@/data/metadata';
---

<Layout 
    title={metadata.about.title}
    description={metadata.about.description}
>
    <div class="container mx-auto px-4 py-16 md:py-24">
        <div class="flex flex-col md:flex-row gap-12">
            {/* Left Section */}
            <div class="md:w-2/3">
                {/* Section Header */}
                <div class="text-sm text-primary font-mono mb-2">
                    // about me
                </div>

                {/* Name with Gradient Effect */}
                <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight bg-gradient-to-r from-primary to-accent text-transparent bg-clip-text mb-6">
                    Kurniadi Ahmad Wijaya
                </h1>

                {/* Profile Section - Mobile Only */}
                <div class="md:hidden mb-8">
                    {aboutInfo.profilePhoto && (
                        <div>
                            {/* Profile Image with Gradient Overlay */}
                            <div class="rounded-lg overflow-hidden border border-border hover:border-primary transition-all duration-300 relative max-w-[300px] mx-auto">
                                <div class="absolute inset-0 bg-gradient-to-tr from-primary/20 to-transparent opacity-50 z-10"></div>
                                <img
                                    src={aboutInfo.profilePhoto}
                                    alt="Kurniadi Ahmad Wijaya"
                                    width={400}
                                    height={400}
                                    class="w-full h-auto"
                                    loading="eager"
                                />
                            </div>

                            {/* Profile Description */}
                            <div class="mt-4 text-foreground/70 text-sm text-center">
                                (I'm a Web3 person so here is Kacchan photo üß°)
                                <div class="flex gap-3 mt-3 justify-center">
                                    {/* GitHub Icon */}
                                    <a
                                        href="https://github.com/shinyq"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="group hover:scale-110 transition-transform duration-200"
                                    >
                                        <div class="bg-background border border-border rounded-md p-2 group-hover:bg-primary/10">
                                            <Github className="w-5 h-5 text-muted-foreground group-hover:text-primary" />
                                        </div>
                                    </a>

                                    {/* LinkedIn Icon */}
                                    <a
                                        href="https://linkedin.com/in/kurniadiahmadwijaya"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="group hover:scale-110 transition-transform duration-200"
                                    >
                                        <div class="bg-background border border-border rounded-md p-2 group-hover:bg-primary/10">
                                            <Linkedin className="w-5 h-5 text-muted-foreground group-hover:text-primary" />
                                        </div>
                                    </a>

                                    {/* Email Icon */}
                                    <a
                                        href="mailto:kurniadiahmadwijaya@gmail.com"
                                        class="group hover:scale-110 transition-transform duration-200"
                                    >
                                        <div class="bg-background border border-border rounded-md p-2 group-hover:bg-primary/10">
                                            <Mail className="w-5 h-5 text-muted-foreground group-hover:text-primary" />
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    )}
                </div>

                {/* Curriculum Vitae Button */}
                <div class="flex gap-4 mt-6 mb-5 animate-fade-in">
                    <CVDialog client:visible />
                </div>

                {/* Intro Section */}
                <div class="prose prose-invert max-w-none mb-8">
                    <p class="text-lg">{aboutInfo.intro}</p>
                </div>

                {/* Engineering Philosophy */}
                <div class="mb-10">
                    <h2 class="text-2xl font-bold text-primary mb-4 border-b border-border pb-2 flex items-center">
                        <span class="mr-2">‚öôÔ∏è</span> Engineering Philosophy
                    </h2>
                    <ul class="space-y-3">
                        {aboutInfo.philosophy.map((item) => (
                            <li class="flex items-start gap-2">
                                <span class="text-primary mt-1">‚ñπ</span>
                                <span>{item}</span>
                            </li>
                        ))}
                    </ul>
                </div>

                {/* Working Style */}
                <div class="mb-10">
                    <h2 class="text-2xl font-bold text-primary mb-4 border-b border-border pb-2 flex items-center">
                        <span class="mr-2">üíª</span> Working Style
                    </h2>
                    <ul class="space-y-3">
                        {aboutInfo.workingStyle.map((item) => (
                            <li class="flex items-start gap-2">
                                <span class="text-primary mt-1">‚ñπ</span>
                                <span>{item}</span>
                            </li>
                        ))}
                    </ul>
                </div>

                {/* Favorite Technologies */}
                <div class="mb-10">
                    <h2 class="text-2xl font-bold text-primary mb-4 border-b border-border pb-2 flex items-center">
                        <span class="mr-2">‚ú®</span> Technologies I Love
                    </h2>
                    <ul class="space-y-3">
                        {aboutInfo.favoriteTech.map((item) => (
                            <li class="flex items-start gap-2">
                                <span class="text-primary mt-1">‚ñπ</span>
                                <span>{item}</span>
                            </li>
                        ))}
                    </ul>
                </div>

                {/* Quote Section */}
                {aboutInfo.quote && (
                    <div class="mb-10">
                        <blockquote class="pl-6 border-l-4 border-primary italic text-muted-foreground bg-background/50 rounded-md p-4 shadow-inner">
                            "{aboutInfo.quote}"
                        </blockquote>
                    </div>
                )}
            </div>

            {/* Right Section (Profile Photo & Social Links) - Desktop Only */}
            <div class="hidden md:block md:w-1/3">
                {aboutInfo.profilePhoto && (
                    <div class="sticky top-24">
                        {/* Profile Image with Gradient Overlay */}
                        <div class="rounded-lg overflow-hidden border border-border hover:border-primary transition-all duration-300 relative">
                            <div class="absolute inset-0 bg-gradient-to-tr from-primary/20 to-transparent opacity-50 z-10"></div>
                            <img
                                src={aboutInfo.profilePhoto}
                                alt="Kurniadi Ahmad Wijaya"
                                width={400}
                                height={400}
                                class="w-full h-auto"
                                loading="eager"
                            />
                        </div>

                        {/* Profile Description */}
                        <div class="mt-4 text-foreground/70 text-sm text-center">
                            (I'm a Web3 person so here is Kacchan photo üß°)
                            <div class="flex gap-3 mt-3 justify-center">
                                {/* GitHub Icon */}
                                <a
                                    href="https://github.com/shinyq"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="group hover:scale-110 transition-transform duration-200"
                                >
                                    <div class="bg-background border border-border rounded-md p-2 group-hover:bg-primary/10">
                                        <Github className="w-5 h-5 text-muted-foreground group-hover:text-primary" />
                                    </div>
                                </a>

                                {/* LinkedIn Icon */}
                                <a
                                    href="https://linkedin.com/in/kurniadiahmadwijaya"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="group hover:scale-110 transition-transform duration-200"
                                >
                                    <div class="bg-background border border-border rounded-md p-2 group-hover:bg-primary/10">
                                        <Linkedin className="w-5 h-5 text-muted-foreground group-hover:text-primary" />
                                    </div>
                                </a>

                                {/* Email Icon */}
                                <a
                                    href="mailto:kurniadiahmadwijaya@gmail.com"
                                    class="group hover:scale-110 transition-transform duration-200"
                                >
                                    <div class="bg-background border border-border rounded-md p-2 group-hover:bg-primary/10">
                                        <Mail className="w-5 h-5 text-muted-foreground group-hover:text-primary" />
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                )}
            </div>
        </div>
    </div>
</Layout>

<style>
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style> 